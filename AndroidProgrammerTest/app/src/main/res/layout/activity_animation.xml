<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_animation"
    tools:context="com.apppartner.androidprogrammertest.AnimationActivity">

    <include android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

    <LinearLayout
        android:id="@+id/mLinearLayout_AnimationDetailsHolder"
        android:layout_width="match_parent"
        android:layout_height= "@dimen/animation_linearlayout_height"
        android:layout_below="@id/toolbar"
        android:background="@drawable/background"
        android:layout_marginLeft="@dimen/animation_linearlayout_margin_leftright"
        android:layout_marginRight="@dimen/animation_linearlayout_margin_leftright"
        android:layout_marginTop="@dimen/animation_linearlayout_margin_top"
        android:orientation="vertical">

        <customwidget.AutofitTextView
            android:lines="6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/animation_description"
            android:textColor="#000000"
            android:layout_marginTop="@dimen/animation_customtextview_margin"
            android:layout_marginLeft="@dimen/animation_customtextview_margin"
            android:layout_marginRight="@dimen/animation_customtextview_margin"
            android:gravity="center_horizontal"
            app:fontType="machinato_extralight.ttf"
            android:textSize="@dimen/animation_customtextview_size"/>

        <customwidget.AutofitTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/animation_bonus_description"
            app:fontType="machinato_bold.ttf"
            android:layout_gravity="center_horizontal"
            android:textColor="#000000"
            android:singleLine="true"
            android:textSize="@dimen/animation_bonus_customtextview_size"/>

        <ImageView
            android:id="@+id/mImageView_AppPartnerLogo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxWidth="@dimen/animation_logo_maxsize"
            android:maxHeight="@dimen/animation_logo_maxsize"
            android:scaleType="fitCenter"
            android:layout_marginTop="@dimen/animation_logo_margin"
            android:layout_marginBottom="@dimen/animation_logo_margin"
            android:src="@drawable/ic_apppartner" />

    </LinearLayout>

    <Button
        android:id="@+id/mButton_Animation_FadeButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_button_height"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/animation_fadebutton_marginleftright"
        android:layout_marginRight="@dimen/animation_fadebutton_marginleftright"
        android:layout_marginBottom="@dimen/animation_fadebutton_marginbottom"
        android:background="@drawable/btn_fade"/>

    </RelativeLayout>
