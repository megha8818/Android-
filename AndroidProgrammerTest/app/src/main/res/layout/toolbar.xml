<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    app:popupTheme="@style/AppTheme"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?attr/actionBarSize"
    android:background="@color/bright_foreground_inverse_material_dark">

    <ImageButton
        android:id="@+id/mImageButton_BackButton"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/toolbar_imagebutton_height"
        android:background="@color/bright_foreground_inverse_material_dark"
        android:src="@drawable/ic_action_back"/>

    <customwidget.CustomTextView
        android:id="@+id/mCustomTextView_HeaderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:layout_marginLeft="@dimen/toolbar_marginleft_50dp"
        android:textSize="@dimen/header_text_size"
        app:fontName="machinato_extralight.ttf"
        android:text="Login"/>

</android.support.v7.widget.Toolbar>