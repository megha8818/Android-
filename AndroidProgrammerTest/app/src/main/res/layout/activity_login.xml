<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    tools:context="com.apppartner.androidprogrammertest.LoginActivity">

    <include
        layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height= "wrap_content"
        android:padding="@dimen/login_linearlayout_padding_40dp"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <customwidget.CustomEditText
            android:id="@+id/mEditText_Login_UserName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_edittext_height"
            android:inputType="text"
            android:background="@drawable/graphic_input"
            android:layout_marginBottom="@dimen/login_edittext_marginbottom_20dp"
            android:layout_marginTop="@dimen/login_edittext_margintop_80dp"
            android:hint="@string/username_edittext_hint"
            android:paddingLeft="@dimen/login_edittext_padding_15dp"
            android:paddingRight="@dimen/login_edittext_padding_15dp"
            app:fontName="machinato.ttf"


            />

        <customwidget.CustomEditText
            android:id="@+id/mEditText_Login_Password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_edittext_height"
            android:background="@drawable/graphic_input"
            android:paddingLeft="@dimen/login_edittext_padding_15dp"
            app:fontName="machinato.ttf"
            android:hint="@string/password_edittext_hint"

            android:inputType="textPassword"
           />

        <Button
            android:id="@+id/mButton_Login_LoginButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_button_height"
            android:layout_marginTop="@dimen/login_button_margintop_140dp"
            android:background="@drawable/btn_login"/>

     </LinearLayout>

</RelativeLayout>
