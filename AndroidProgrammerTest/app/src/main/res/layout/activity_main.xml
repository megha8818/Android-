<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/bg_coding_tasks"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height= "wrap_content"
        android:layout_centerInParent="true"
        android:padding="@dimen/main_linearlayout_padding_10dp"
        android:orientation="vertical">

        <customwidget.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/coding_tasks"
            android:textSize="@dimen/header_text_size"
            android:textColor="@android:color/white"
            app:fontName="machinato_bold.ttf"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/activity_button_height"
            android:background="@drawable/btn_main_chat"
            android:id="@+id/button"
            android:layout_margin="@dimen/main_button_margin_10dp"
            android:onClick="onChatButtonClicked"
            android:layout_alignLeft="@+id/button2"
            android:layout_alignStart="@+id/button2"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/activity_button_height"
            android:background="@drawable/btn_main_login"
            android:id="@+id/button2"
            android:layout_margin="@dimen/main_button_margin_10dp"
            android:onClick="onLoginButtonClicked"
          />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="@dimen/activity_button_height"
            android:background="@drawable/btn_main_animation"
            android:id="@+id/button3"
            android:layout_margin="@dimen/main_button_margin_10dp"
            android:onClick="onAnimationTestButtonClicked"
            />
    </LinearLayout>

</RelativeLayout>
